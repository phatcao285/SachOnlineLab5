@model IEnumerable<SachOnlineLab5.Models.SACH>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

@Html.Action("SliderPartial", "SachOnline");

<div class="container-fluid gedf-wrapper">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    @Html.Action("ChuDePartials", "SachOnlines");
                </div>
                <div class="card-body">
                    @Html.Action("NXBPartials", "SachOnlines");
                </div>
            </div>

        </div>

        <div class="col-md-9 gedf-main">
            <h2 class="text-centerss">SÁCH MỚI</h2>

            <div class="container">
                @foreach (var item in Model)
                {
                    <div class="card" style="width: 15rem;">
                        <img class="card-img-top" src="~/Images/@Html.DisplayFor(modelItem => item.AnhBia)" alt="Card image cap">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(modelItem => item.TenSach)</h4>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.MoTa)</p>

                            <p class="d-inline-flex gap-2">
                                <a href="@Url.Action("ThemGioHang","GioHang", new { ms = item.MaSach, url = Request.Url.ToString() }) " class="btn btn-warning" role="button">
                                    <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Thêm vào giỏ hàng
                                </a>
                                <a href="@Url.Action("Details","SachOnlines",new {id = item.MaSach })" class="btn btn-primary">Xem</a>
                            </p>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>





