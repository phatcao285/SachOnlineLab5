@model IEnumerable<SachOnlines_Lab_3.Models.SACH>





@{
    ViewBag.Title = "SachBNPartials";
}


<div class="sachban-container">
    <h2 class="text-centers">SÁCH BÁN NHIỀU</h2>
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <div class="media-object-default">
                @foreach (var item in Model)
                {
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object imgsachbannhieu"
                                     src="~/Images/@Html.DisplayFor(modelItem => item.AnhBia)" alt="placeholder image">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">@Html.DisplayFor(modelItem => item.TenSach)</h4>
                            @Html.DisplayFor(modelItem => item.MoTa)
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- row-->
    <hr>
</div>






