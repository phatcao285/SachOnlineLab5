@using SachOnlines_Lab_3.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>GioHang</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã sách
        </th>
        <th>
            Tên Sách
        </th>
        <th>
            Ảnh Bìa
        </th>

        <th>
            Số Lượng
        </th>

        <th>
            Đơn Giá
        </th>

        <th>
            Thành Tiền
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.iMaSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sTenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sAnhBia)
            </td>

            @using (Html.BeginForm("UpdateGH", "GioHang", new { iMaSach = item.iMaSach }))
            {
                <td align="center">
                    <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:#f4ff94" />
                </td>
                <td align="center">
                    @string.Format("{0:#,##0,0}", @item.dDonGia)
                </td>

                <td align="center">
                    @string.Format("{0:#,##0,0}", @item.dThanhTien)
                </td>
                <td>
                    <a href="@Url.Action("Details","SachOnlines", new { id = item.iMaSach})">Chi tiết</a>
                </td>
                <td>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSach = item.iMaSach })</td>
                <td>
                    <input type="submit" value="Cập nhật" />
                </td>
            }

        </tr>
    }
    <tr>
        <th></th>
        <th></th>
        <td colspan="4" style="text-align:right; color:red; font-weight:bold; padding-right:5px;">
            Tổng số lượng: @string.Format("{0:#,##0}", ViewBag.TongSoLuong)
        </td>
        <td colspan="4" style="text-align:center; color:red; font-weight:bold;">
            Tổng tiền: @string.Format("{0:#,##0,0}", ViewBag.TongTien) VNĐ
        </td>
    </tr>

    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="9">
            @Html.ActionLink("Xóa giỏ hàng", "XoaGioHang")
        </td>
    </tr>

    <tr style="font-weight:bold; color:blue; text-align:center;">
        <td colspan="9">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
        </td>
    </tr>
</table>
